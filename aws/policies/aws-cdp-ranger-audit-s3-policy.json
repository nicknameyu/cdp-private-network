{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "FullObjectAccessUnderAuditDir",
        "Effect": "Allow",
        "Action": [
          "s3:GetObject",
          "s3:PutObject"
        ],
        "Resource": "${CDP_BUCKET_ARN}/data/ranger/audit/*"
      },
      {
        "Sid": "LimitedAccessToDataLakeBucket",
        "Effect": "Allow",
        "Action": [
          "s3:AbortMultipartUpload",
          "s3:ListBucket",
          "s3:ListBucketMultipartUploads",
          "s3:PutObject",
          "s3:DeleteObject"
        ],
        "Resource": ["${CDP_BUCKET_ARN}", "${CDP_BUCKET_ARN}/*"]
      }
    ]
  }